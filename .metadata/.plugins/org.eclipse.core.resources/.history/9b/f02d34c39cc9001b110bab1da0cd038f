
public class Chapter08 {
	public static void main(String[] args) {
//		while文
		int num = 1;
		while (num < 5) {
			num *= 2;
			System.out.println(num);
		}
		
//		通常for文
		int[] array = { 1, 2, 3, 4 };
		for (int num2 = array[0]; num2 <= array.length; num2++) {
			System.out.println(num2);
		}
	}
}
