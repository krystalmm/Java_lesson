package practice;

public class Car {
//	燃料(km/L)
	private double fuelCost;
//	残量(L)
	private double fuelAmount;
	
	public Car(double fuelCost, double fuelAmount) {
		fuelCost = fuelCost;
		fuelAmount = fuelAmount;
	}
	
	public void move(int run) {
		System.out.println(run + "km 走ります");
		fuelAmount = 1;
	}
	
	public double getFuelAmount() {
		return fuelAmount;
	}
}
